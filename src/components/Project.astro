---
import Link from "./Link.astro";

export interface Props {
  title: string;
  repo: string;
  website?: string;
  descSection: string;
  techsSection: string;
}

const { title, repo, website, descSection, techsSection } = Astro.props;
---

<div class="flex flex-col gap-4">
  <div class="flex flex-col gap-2">
    <li>{title}</li>
    {
      website && (
        <embed
          type="text/html"
          src={website}
          class="w-[27rem] h-[35rem] rounded-lg"
        />
      )
    }
  </div>
  <div class="flex flex-col">
    <Link href={repo} text="Github repository" />
    {website && <Link href={website ? website : ""} text="Website" />}
  </div>
  <p>
    {descSection}
  </p>
  <p>
    {techsSection}
  </p>
</div>
